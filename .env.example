# ================================
# GVC EXPERTOS - Variables de Entorno
# ================================

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Google Places API
GOOGLE_PLACES_API_KEY=your-google-places-api-key

# Autenticación Admin
JWT_SECRET=your-super-secret-jwt-key-min-32-chars

# Admin inicial (opcional, para script create-admin)
ADMIN_EMAIL=admin@gvcexpertos.es
ADMIN_PASSWORD=your-secure-password

# Email (Resend)
RESEND_API_KEY=re_xxxxxxxxxxxx
EMAIL_FROM=GVC Expertos <noreply@gvcexpertos.es>
EMAIL_TO=info@gvcexpertos.es

# ISR Revalidación
REVALIDATE_SECRET=your-revalidation-secret

# Entorno
NEXT_PUBLIC_SITE_URL=https://gvcexpertos.es
NODE_ENV=development

# Analytics (opcional)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
